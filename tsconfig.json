{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"baseUrl": "src",
		"outDir": "build",
		"sourceMap": true,
		"esModuleInterop": true,
		"allowJs": true,
		"lib": ["es2021", "dom"],
		"paths": {
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "build", "src/app/renderer"]
}
