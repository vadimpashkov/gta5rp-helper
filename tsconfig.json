{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"baseUrl": ".",
		"outDir": "dist",
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"resolveJsonModule": true,
		"lib": ["es2021", "dom", "dom.iterable"],
		"paths": {
			"@utils/*": ["src/utils/*"],
			"@state/*": ["src/state/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "prod"]
}
