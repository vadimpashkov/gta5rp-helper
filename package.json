{
	"name": "gta5-helper",
	"version": "1.0.0",
	"description": "Helper for GTA 5 RP",
	"main": "src/main.ts",
	"scripts": {
		"build:dev": "npm run clean:build & npm run build & npm run start",
		"build:prod": "npm run clean:prod & npm run build & electron-builder",
		"clean:build": "rimraf ./build",
		"clean:prod": "npm run clean:build & rimraf ./prod",
		"start": "electron build/main.js",
		"build": "npm run typescript & npm run copy-files",
		"typescript": "tsc -p ./tsconfig.json & tscpaths -p tsconfig.json -s ./src -o ./build",
		"copy-files": "copyfiles -u 1 ./src/**/*.png ./src/**/*.html ./src/**/*.woff ./src/**/*.woff2 ./src/**/*.css ./src/**/*.js ./build"
	},
	"author": {
		"name": "Vadim Pashkov",
		"email": "vadimpashkov.job@gmail.com",
		"url": "https://github.com/vadimpashkov"
	},
	"contributors": [
		{
			"name": "Yaniddze",
			"url": "https://github.com/Yaniddze"
		}
	],
	"license": "MIT",
	"dependencies": {
		"@nut-tree/nut-js": "^1.7.0",
		"ffi-napi": "^4.0.3",
		"keycode": "^2.2.0",
		"node-key-sender": "^1.0.11",
		"ref-napi": "^3.0.3",
		"ref-struct-di": "^1.1.1",
		"ref-struct-napi": "^1.1.1",
		"ref-union-napi": "^1.0.2"
	},
	"devDependencies": {
		"@types/node": "^16.11.6",
		"copyfiles": "^2.4.1",
		"electron": "^13.6.1",
		"electron-builder": "^22.13.1",
		"rimraf": "^3.0.2",
		"tscpaths": "^0.0.9",
		"typescript": "^4.4.4"
	},
	"build": {
		"appId": "com.electron.app",
		"productName": "GTA 5 Helper",
		"files": [
			"build/**/*",
			"!src"
		],
		"directories": {
			"output": "prod"
		},
		"win": {
			"target": "portable",
			"icon": "./assets/icons/app.png"
		},
		"portable": {
			"unicode": false,
			"artifactName": "GTA 5 Helper.exe"
		}
	}
}
